namecard()
	font-family arial
	font-size 1.3em
	letter-spacing -2px
	text-align center
desccard()
	border 2px solid #954b58
	box-sizing border-box
	font-size  12px
	height 70px
	overflow-y scroll
	padding .5em
	width 98%
attkcard()
	margin .45em 0 .3em 0
	font-size 1.1em
	 
	
.Card
	background  #eeeeee 
	border 2px solid #3c4377 
	border-radius  .4em 
	box-shadow 0 0 10px rgba(white, .9)
	display flex
	flex-direction column
	align-items center
	padding  .2em .4em 
	width  250px  

	&-image
		box-shadow 0 0 2px 2px #576389
		width  96% 

	&-name
		namecard()
		box-shadow  0px 2px 1px 1px #ccc 
		margin 0 0 .5em 0 
		padding  0.3em 
		width 96%

	&-description
		background  #edecef
		desccard()
	&-attack
		width 100%
		 attkcard()
	&-attack:before
		content 'ATK ' 

